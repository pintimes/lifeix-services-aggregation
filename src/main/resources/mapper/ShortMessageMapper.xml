<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ShortMessageMapper">

	<sql id="TAB_NAME">short_message</sql>

	<select id="getUnsendedShortMessages" resultType="com.lifeix.football.sender.module.sms.po.ShortMessagePO" >
		SELECT 
		id,  
		signName,
		templateCode,
		paramString, 
		recNum, 
		sendFlag,
		createTime 
		FROM short_message  
		WHERE sendFlag = 0  
		<if test="startId != null">
			AND id &lt; #{startId}
		</if>
		ORDER BY id DESC 
		LIMIT #{limit}   
	</select>
	
	<insert id="insertBatch" parameterType="java.util.List">
		INSERT INTO <include refid="TAB_NAME" /> 
		(signName,templateCode,paramString,recNum,sendFlag) 
		VALUES 
		<foreach collection="list" index="index" item="item"
			separator=",">
			(#{item.signName},#{item.templateCode},#{item.paramString},#{item.recNum},#{item.sendFlag}) 
		</foreach>
	</insert>
	
	<update id="updateSendFlag">
		UPDATE <include refid="TAB_NAME" />  
		SET sendFlag = #{sendFlag} 
		WHERE id = #{id} 
	</update>
	
</mapper>