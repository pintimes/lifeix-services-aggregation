<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EmailMapper">

	<sql id="TAB_NAME">email</sql>

	<select id="getUnsendedEmais" resultType="com.lifeix.football.service.aggregation.module.sender.module.email.po.EmailPO" >
		SELECT 
		id,  
		fromAddress,
		toAddress,
		subject, 
		content, 
		type,
		sendFlag,
		createTime 
		FROM email  
		WHERE sendFlag = 0  
		<if test="startId != null">
			AND id &lt; #{startId}
		</if>
		ORDER BY id DESC 
		LIMIT #{limit}   
	</select>
	
	<insert id="insertBatch" parameterType="java.util.List">
		INSERT INTO <include refid="TAB_NAME" /> 
		(fromAddress,toAddress,subject,content,type,sendFlag,createTime) 
		VALUES 
		<foreach collection="list" index="index" item="item"
			separator=",">
			(#{item.fromAddress},#{item.toAddress},#{item.subject},#{item.content},#{item.type},#{item.sendFlag},NOW()) 
		</foreach>
	</insert>
	
	<update id="updateSendFlag">
		UPDATE <include refid="TAB_NAME" />  
		SET sendFlag = #{sendFlag} 
		WHERE id = #{id} 
	</update>
	
</mapper>